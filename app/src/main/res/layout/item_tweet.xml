<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_weight="0"
        android:id="@+id/iv_avatar"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dm_text_margin"
                android:layout_marginEnd="@dimen/dm_text_margin"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_username"
                android:layout_toRightOf="@id/tv_name"
                android:layout_toEndOf="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tweet"
                android:layout_below="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_retweet"
                android:layout_marginRight="@dimen/dm_text_margin"
                android:layout_marginEnd="@dimen/dm_text_margin"
                android:layout_below="@id/tv_tweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_likes"
                android:layout_below="@id/tv_tweet"
                android:layout_toRightOf="@id/tv_retweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>